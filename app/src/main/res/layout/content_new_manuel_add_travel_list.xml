<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="esales.schell.com.esales.MainActivity.NewManuelAddTravelList"
    tools:showIn="@layout/activity_new_manuel_add_travel_list">

    <LinearLayout
        android:id="@+id/mainparent"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_manuel_submit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ScrollView
            android:id="@+id/scrollingview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/parentlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                   >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight=".7"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"
                            android:textColorHint="#800200">

                            <EditText
                                android:focusable="false"
                                android:id="@+id/travelDateTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Travel Date"
                                android:inputType="date"
                                android:textColor="@color/red_700" />
                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>
                    <!--<TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight=".7"
                        android:gravity="center_vertical"
                        android:hint="Case Update Date"
                        android:text="Date"
                        android:textColor="@color/red_800"
                        android:textColorHint="@color/red_800"
                        android:textSize="16dp" />-->

                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/travel_date_cal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".3"
                        android:src="@drawable/cal" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vehicle Type"
                    android:textColor="@color/red_800"
                    android:textSize="16dp" />

                <RadioGroup
                    android:layout_marginTop="5dp"
                    android:id="@+id/travel_Type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </RadioGroup>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                  >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight=".7"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"
                            android:textColorHint="#800200">

                            <EditText
                                android:focusable="false"
                                android:id="@+id/start_date_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Start Time"
                                android:inputType="time"
                                android:textColor="@color/red_700" />
                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/start_dateView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".3"
                        android:src="@drawable/time" />
                </LinearLayout>

                <android.support.design.widget.TextInputLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:textColorHint="#800200">

                    <EditText
                        android:id="@+id/input_sourceName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Source Name"
                        android:textColor="@color/red_700" />
                </android.support.design.widget.TextInputLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight=".7"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"
                            android:textColorHint="#800200">

                            <EditText
                                android:focusable="false"
                                android:id="@+id/reacheTimeTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Reached Time"
                                android:inputType="time"
                                android:textColor="@color/red_700" />
                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/reached_dateview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".3"
                        android:src="@drawable/time" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Customer Name"
                    android:textColor="@color/red_800"
                    android:textSize="16dp" />

                <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                    android:layout_marginLeft="10dp"
                    app:hintText="Please Select Customer"
                    android:layout_marginTop="10dp"
                    android:id="@+id/select_customer_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawSelectorOnTop="true"
                    >

                </com.toptoche.searchablespinnerlibrary.SearchableSpinner>

                <android.support.design.widget.TextInputLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:textColorHint="#800200">

                    <EditText
                        android:id="@+id/input_destinationName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Destination Name"
                        android:textColor="@color/red_700" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:textColorHint="#800200">

                    <EditText
                        android:id="@+id/input_travelDistance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Travel Distance"
                        android:inputType="number"
                        android:textColor="@color/red_700" />
                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/amount_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <android.support.design.widget.TextInputLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:textColorHint="#800200">

                    <EditText
                        android:id="@+id/amounttxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Amount"
                        android:inputType="number"
                        android:textColor="@color/red_700" />
                </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <android.support.design.widget.TextInputLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:textColorHint="#800200">

                    <EditText
                        android:id="@+id/remarkEditTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Remark"
                        android:inputType="textShortMessage"
                        android:textColor="@color/red_700" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
        </ScrollView>


    </LinearLayout>
    <Button
        android:id="@+id/btn_manuel_submit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainparent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Submit"
        android:textColor="@color/white"
        />

</android.support.constraint.ConstraintLayout>
