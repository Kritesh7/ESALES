<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="esales.schell.com.esales.MainActivity.ShowMapsActivity">

    <include
        layout="@layout/custome_toolbar"
        android:id="@+id/custome_bar"/>

    <include layout="@layout/content_show_map_activity"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/rechecdbtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:text="Reached"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/showListBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight=".5"
            android:text="Show List"
            android:textColor="@color/white" />

       <!-- <Button
            android:id="@+id/day_endBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight=".3"
            android:text="Day End"
            android:textColor="@color/white" />-->
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>

